{
  "name": "char-dust",
  "version": "0.0.2",
  "description": "convert image to ascii",
  "main": "./dist/char-dust.umd.js",
  "module": "./dist/char-dust.es.js",
  "exports": {
    ".": {
      "import": "./dist/char-dust.es.js",
      "require": "./dist/char-dust.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && tsc",
    "build:demo": "cd demo && yarn build",
    "clean": "rm -rf dist",
    "dev": "cd demo && yarn dev",
    "lint": "eslint . --ext .ts",
    "prepublishOnly": "yarn build"
  },
  "license": "MIT",
  "dependencies": {
    "@ctrl/tinycolor": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "lint-staged": "^10.5.4",
    "typescript": "^4.2.3",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn lint",
      "git add"
    ]
  }
}
